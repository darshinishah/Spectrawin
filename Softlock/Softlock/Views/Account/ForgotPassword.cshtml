@model Softlock.Models.LoginModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h4>Forgot Password</h4>

<hr />


<div class="row">
    <div class="col-md-4">
        @if (ViewBag.Message != null && ViewBag.Message != "")
        {
            <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <label class="control-label"> Please enter your valid email for reset password</label>
            <input type="text" class="form-control" placeholder="Enter your Email" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>        
        <div class="form-group">
            <button type="submit" class="btn btn-primary marginR30"> Send Reset Link </button>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary"> Back </a>            
        </div>
    </form>
    </div>
</div>

